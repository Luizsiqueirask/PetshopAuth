@model WebAuth.Models.Perfil.PersonSchedule

@{
    ViewBag.Title = "Schedule Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Edit", "Schedule", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="form-horizontal card shadow p-3 mb-5 bg-body rounded">
        <h4 class="text-center">New Schedule</h4>
        <div class="text-right">
            @Html.ActionLink("Back to List", "Index", new { area = "" }, new { @class = "btn btn-primary text-white mt-2 rounded-pill" })
        </div>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="container card-body rounded-top">
            <div class="">
                <div class="col-12">
                    <div class="">
                        <div class="" id="home">

                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true)

                            <h4 class="h4 pt-4 pb-2 text-start text-center">Agendar</h4>

                            <div class="container">

                                <div class="form-group">
                                    @Html.LabelFor(model => model.Schedule.Services, htmlAttributes: new { @class = "control-label col-md-12" })
                                    <div class="col-md-12">
                                        @Html.EditorFor(model => model.Schedule.Services, new { htmlAttributes = new { @class = "form-control mt-2 rounded-pill" } })
                                        @Html.ValidationMessageFor(model => model.Schedule.Services, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.Schedule.Date, htmlAttributes: new { @class = "control-label col-md-12" })
                                    <div class="col-md-12">
                                        @Html.EditorFor(model => model.Schedule.Date, new { htmlAttributes = new { @class = "form-control mt-2 rounded-pill" } })
                                        @Html.ValidationMessageFor(model => model.Schedule.Date, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.Schedule.Time, htmlAttributes: new { @class = "control-label col-md-3 mt-2" })
                                    <div class="col-md-12">
                                        @Html.EditorFor(model => model.Schedule.Time, new { htmlAttributes = new { @class = "form-control mt-2 rounded-pill" } })
                                        @Html.ValidationMessageFor(model => model.Schedule.Time, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="col-md-5">
                                    @Html.LabelFor(model => model.Schedule.PersonId, htmlAttributes: new { @class = "control-label mt-2 rounded-pill" })
                                    <div class="col-md-12">
                                        @Html.DropDownListFor(model => model.Schedule.PersonId, Model.PeopleSelect ?? new List<SelectListItem>(), " ", new { htmlAttributes = new { @class = "form-control mt-2 rounded-pill" } })
                                        @Html.ValidationMessageFor(model => model.Schedule.PersonId, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                            </div>
                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <br>
                                    <input type="submit" value="Save" class="form-control btn btn-lg btn-success rounded-pill" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
